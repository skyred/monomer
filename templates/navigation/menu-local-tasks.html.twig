{#
/**
* @file
* Theme override to display primary and secondary local tasks.
*
* Available variables:
* - primary: HTML list items representing primary tasks.
* - secondary: HTML list items representing primary tasks.
*
* Each item in these variables (primary and secondary) can be individually
* themed in menu-local-task.html.twig.
*/
#}

{% macro tabs(heading, wrapper_class, items) %}
  <mm-tabs heading="{{ heading|t }}"
         wrapper-class="{{ wrapper_class | e('html_attr') }}">
  {% for item in items %}
    <mm-tab {% if item.active %}
             active="true"
            {% endif %}
            url="{{ item.url }}"
            text="{{ item.text }}">
    </mm-tab>
  {% endfor %}
  </mm-tabs>
{% endmacro %}

{% polymer import "mm-tabs/mm-tabs.html" %}
{% if primary %}
  {{ _self.tabs('Primary tabs', "tabs--primary", primary) }}
{% endif %}
{% if secondary %}
  {{ _self.tabs('Secondary tabs', "tabs--secondary", secondary) }}
{% endif %}
